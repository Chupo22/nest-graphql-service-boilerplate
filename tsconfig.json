{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2019",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@libs": ["src/libs/index"],
      "@config": ["src/config/index"],
      "@modules": ["src/modules/index"],
      "@interceptors": ["src/interceptors/index"],
      "@generated/gql": ["src/generated/graphql/graphql"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
